# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# ===========================================
# DATABASE SETTINGS
# ===========================================
MONGODB_URI=mongodb://localhost:27017/hvh_hotel

# ===========================================
# JWT & AUTHENTICATION SETTINGS
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACTIVATION_SECRET=your_jwt_activation_secret_key_here

# JWT Token Expiration (in seconds)
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Cookie Settings (in days)
COOKIE_EXPIRE=7

# ===========================================
# CORS & SECURITY SETTINGS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ===========================================
# RATE LIMITING SETTINGS
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING SETTINGS
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# APPLICATION METADATA
# ===========================================
APP_NAME=HVH Hotel Management API
APP_VERSION=1.0.0
APP_DESCRIPTION=Hotel Management System Backend API

# ===========================================
# DEVELOPMENT/TESTING SETTINGS
# ===========================================
# DEBUG=true
# ENABLE_SWAGGER=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# For production deployment:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hvh_hotel?retryWrites=true&w=majority
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# NODE_ENV=production
# PORT=80
