{
  "name": "hvh-api",
  "version": "1.0.0",
  "description": "Hotel Management System Backend API",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:inspect": "ts-node -r tsconfig-paths/register scripts/generate-from-db.ts inspect",
    "db:generate-types": "ts-node -r tsconfig-paths/register scripts/generate-from-db.ts types",
    "db:generate-models": "ts-node -r tsconfig-paths/register scripts/generate-from-db.ts models",
    "db:generate-all": "ts-node -r tsconfig-paths/register scripts/generate-from-db.ts all",
    "db:setup": "node scripts/setup-database.js",
    "generate-models": "ts-node src/generateAllModels.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoangvyhotel/hvh-api.git"
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hoangvyhotel/hvh-api/issues"
  },
  "homepage": "https://github.com/hoangvyhotel/hvh-api#readme",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/mongoose": "^5.11.96",
    "bcryptjs": "^2.4.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-schema": "^12.6.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "prisma": "^6.14.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
